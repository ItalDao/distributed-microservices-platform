# ==================== ENVIRONMENT VARIABLES ====================
# Copy this file to .env and adjust values as needed

# ==================== API GATEWAY ====================
PORT=3000
NODE_ENV=production
AUTH_SERVICE_URL=http://auth-service:3001
PAYMENTS_SERVICE_URL=http://payments-service:3002
NOTIFICATIONS_SERVICE_URL=http://notifications-service:3003
JWT_SECRET=your_super_secret_jwt_key_change_in_production
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
CORS_ORIGIN=*
LOG_LEVEL=info

# ==================== AUTH SERVICE ====================
AUTH_PORT=3001
AUTH_DATABASE_HOST=postgres
AUTH_DATABASE_PORT=5432
AUTH_DATABASE_USER=admin
AUTH_DATABASE_PASSWORD=admin123
AUTH_DATABASE_NAME=auth_db
AUTH_JWT_SECRET=your_super_secret_jwt_key_change_in_production
AUTH_JWT_EXPIRATION=3600
AUTH_BCRYPT_ROUNDS=10

# ==================== PAYMENTS SERVICE ====================
PAYMENTS_PORT=3002
PAYMENTS_DATABASE_HOST=mongodb
PAYMENTS_DATABASE_PORT=27017
PAYMENTS_DATABASE_USER=admin
PAYMENTS_DATABASE_PASSWORD=admin123
PAYMENTS_DATABASE_NAME=payments_db

# ==================== NOTIFICATIONS SERVICE ====================
NOTIFICATIONS_PORT=3003
NOTIFICATIONS_REDIS_HOST=redis
NOTIFICATIONS_REDIS_PORT=6379
NOTIFICATIONS_REDIS_PASSWORD=redis123
NOTIFICATIONS_REDIS_DB=0

# ==================== SMTP (Email Configuration) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@microservices.local
SMTP_FROM_NAME=Microservices Platform

# ==================== MESSAGE BROKER ====================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# ==================== DATABASE ====================
# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=auth_db

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=payments_db

# Redis
REDIS_PASSWORD=redis123

# ==================== MONITORING ====================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin123
LOG_LEVEL=info

# ==================== ENVIRONMENT ====================
ENVIRONMENT=production
DEBUG=false
